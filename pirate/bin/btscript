#!/bin/sh

group=$1
file=$2
shift 2

CONF_FILE=/home/pirate/lcserver/conf/$group.args
PHP_EXEC=/home/pirate/bin/php
SCRIPT_FILE=/home/pirate/rpcfw/lib/ScriptRunner.php

if [ "$group" = "" -o "$file" = "" ]; then
    echo "Usage: btscript group file"
    exit 0
fi

if [ ! -f $CONF_FILE ]; then
    echo "$CONF_FILE not exists"
    exit 0
fi

if [ ! -f $file ]; then
    echo "$file not exists"
    exit 0
fi

db=`grep -Eo "\-d [^ ]+" $CONF_FILE|cut -d" " -f2`

$PHP_EXEC $SCRIPT_FILE -f $file -g $group -d $db $@
